<div class="layout-container">

  {% if page.menu_top %}
    <div id="menu-top" class="nav">
      {{ page.menu_top }}
    </div>
  {% endif %}

  {% if page.header %}
    <header id="main-header" role="banner">
      {{ page.header }}
    </header>
  {% endif %}

  {% if page.highlighted %}
    <div id="highlighted">
      {{ page.highlighted }}
    </div>
  {% endif %}

  <main role="main">
    <a id="main-content" tabindex="-1"></a>

    {% if page.content %}
       <div id="layout-content">
        {{ page.content }}
      </div>
    {% endif %}

    {% if page.sidebar_left %}
      <aside class="layout-sidebar-left" role="complementary">
        {{ page.sidebar_left }}
      </aside>
    {% endif %}
    {% if page.sidebar_right %}
      <aside class="layout-sidebar-second" role="complementary">
        {{ page.sidebar_right }}
      </aside>
    {% endif %}

    {% if page.highlighted_bottom %}
      <div id="layout-highlighted">
        {{ page.highlighted_bottom }}
      </div>
    {% endif %}

  </main>

  {% if page.footer_1 %}
    <footer id="footer-1" role="contentinfo">
      {{ page.footer_1 }}
    </footer>
  {% endif %}
  
  {% if page.footer_2 %}
    <footer id="footer-2" role="contentinfo">
      {{ page.footer_2 }}
    </footer>
  {% endif %}

</div>